<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/backgroundLight</item>
        <item name="colorOnBackground">@color/textPrimaryLight</item>
        <item name="colorSurface">@color/surfaceLight</item>
        <item name="colorOnSurface">@color/textPrimaryLight</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/buttonTextDark</item>
        <item name="android:backgroundTint">@color/buttonBackgroundLight</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/textPrimaryLight</item>
        <item name="android:backgroundTint">@color/surfaceLight</item>
    </style>

    <!-- RadioButton Style -->
    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/primary</item>
    </style>

    <!-- TextView Style -->
    <style name="TextViewStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textPrimaryLight</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavStyle">
        <item name="itemBackground">@color/surfaceLight</item>
        <item name="itemIconTint">@color/itemicontintlight</item>
        <item name="itemTextColor">@color/itemtextcolorlight</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">7dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorAnimationDuration">@integer/material_motion_duration_long_2</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="android:background">@color/backgroundLight</item>
    </style>

</resources>
